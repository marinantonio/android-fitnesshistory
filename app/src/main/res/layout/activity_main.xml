<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/today_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data for today" />

    <Button
        android:id="@+id/today_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/today_title"
        android:text="Steps" />

    <Button
        android:id="@+id/today_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/today_title"
        android:layout_below="@+id/today_title"
        android:text="Distance" />

    <TextView
        android:id="@+id/history_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Past two days"
        android:paddingTop="20dp"
        android:layout_below="@+id/today_distance"/>

    <Button
        android:id="@+id/history_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/history_title"
        android:text="Steps" />

    <Button
        android:id="@+id/history_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/history_title"
        android:layout_below="@+id/history_title"
        android:text="Distance" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/history_distance">

        <TextView
            android:id="@+id/data_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Click on one of the buttons!"/>

    </ScrollView>

</RelativeLayout>
